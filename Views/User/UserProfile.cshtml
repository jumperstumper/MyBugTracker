@model IEnumerable<UserTicket>
@using Microsoft.AspNetCore.Identity
@inject UserManager<IdentityUser> UserManager
@inject RoleManager<IdentityRole> RoleManager

@{
    Layout = "_Dashboard";   

}


<div class="container">
    <div class="main-body">
        <div class="row gutters-sm">
            <div class="col-md-4 mb-3">
                <div class="card">
                    <div class="card-body">
                        <div class="d-flex flex-column align-items-center text-center">
                            <img src="https://bootdey.com/img/Content/avatar/avatar7.png" alt="Admin" class="rounded-circle" width="150">
                            <div class="mt-3">
                                <h4>@UserManager.GetUserName(User)</h4>
                                @*<p class="text-secondary mb-1">Role</p>
                                <p class="text-muted font-size-sm"></p>
                                <button class="btn btn-outline-primary">Message</button>*@
                            </div>
                        </div>
                    </div>
                </div>

            </div>
            <div class="col-md-8">
                <div class="card mb-3">
                    <div class="card-body">
                        @*UserTickets*@

                        <div class="container p-3">
                            <div class="row pt-4">
                                <div class="col-6">
                                    <h3 class="text-info">Your associated Tickets</h3>
                                </div>

                                @*<form method="get" asp-action="UserProfile">
                                    <p>
                                        <input type="search" placeholder="Search for Tickets" value="@ViewData["GetTicketDetails"]" name="ticketSearch" style="width:150px;" />
                                        <input type="submit" value="search" class="btn btn-sm btn-primary" />
                                        <a asp-action="UserProfile">Show all Tickets</a>
                                    </p>
                                </form>*@

                            </div>

                            <br /> <br />

                            @if (Model.Count() > 0)
                            {
                                <table class="table table-bordered table-striped" style="width:100%">
                                    <thead>
                                        <tr>
                                            <th>
                                                Ticket Name
                                            </th>
                                            <th>
                                                Created
                                            </th>
                                            <th>
                                                Priority
                                            </th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var obj in Model)
                                        {
                                            <tr>
                                                <td width="10%">
                                                    @obj.Ticket.TicketName
                                                </td>
                                                <td width="10%">
                                                    @obj.Ticket.TicketCreated
                                                </td>
                                                <td width="5%">
                                                    @obj.Ticket.TicketPriority
                                                </td>
                                                <td width="5%">
                                                    <a asp-controller="Ticket" asp-route-Id="@obj.Ticket_Id" asp-action="Info" class="btn btn-link text-primary">Info</a>
                                                </td>

                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            }
                            else
                            {
                                <p>You are not assign to any tickets!</p>
                            }

                        </div>

                        @*End UserTickets*@
                    </div>
                </div>





            </div>
        </div>

    </div>
</div>
