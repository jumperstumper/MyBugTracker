@model WebApplication20.Models.Project

@{
    ViewData["Title"] = "Create";
    Layout = "_Dashboard";
}

<h1>Create</h1>

<hr />
<div class="row">
    <div class="col-md-4 p-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Created" class="control-label"></label>
                <input asp-for="Created" class="form-control" />
                <span asp-validation-for="Created" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" onclick="return createdProject()" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div class="p-3">
    <a asp-action="Index">Show project list</a>
</div>

@{
    <script>
        function createdProject() {
            Swal.fire({
                position: 'top-end',
                icon: 'success',
                title: 'Your Project has been saved',
                showConfirmButton: false,
                timer: 1500
            })
    </script>
}



